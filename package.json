{
  "name": "aibrowsex",
  "version": "1.0.0",
  "description": "AI-Powered Web Browser with Claude Sonnet 4.5 Integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run backend\" \"wait-on http://localhost:8000/health && electron .\"",
    "backend": "cd backend && ./venv/bin/python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "electron-builder build --win --mac --linux",
    "build:win": "electron-builder build --win",
    "build:mac": "electron-builder build --mac",
    "build:linux": "electron-builder build --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.aibrowsex.app",
    "productName": "AIBrowseX",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "db/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["**/*", "!**/__pycache__", "!**/*.pyc"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Network"
    }
  },
  "keywords": [
    "electron",
    "browser",
    "ai",
    "claude",
    "fastapi"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.3.1"
  }
}
